<ScreenA3@MyMDScreen>:
    name: "screen A3"
    scroll: _scrollA3
    md_bg_color: app.main_theme_bg_color

    MDBoxLayout: 
        orientation: "vertical"

        MyMDTabs:
            id: _tabs
            grid: _grid3
            size_hint_y: None
            allow_stretch: True
            lock_swiping: True #disable switching for tabs
                            
        MDScrollView:
            id: _scrollA3

            MDGridLayout: # strange we cannot create Tabs with MDGridLayout rule
                id: _grid3
                cols:2
                spacing: "12dp"
                padding: ["12dp","12dp","12dp",0]
                adaptive_height: True
