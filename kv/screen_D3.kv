#: import config_input config.config_input
#: import platform kivy.utils.platform
#: import Clock kivy.clock.Clock
#: import partial functools.partial

ScreenD3:
    id: _screen_d3
    name: "screen D3"
    scroll: _scrollD3
    md_bg_color: app.main_theme_bg_color

    MDScrollView:
        id: _scrollD3

        MDBoxLayout:
            orientation:"vertical"
            #size_hint_x: 0.8 # to have MdSwitch visible
            adaptive_height: True
            padding: [dp(10),dp(20),dp(10),dp(20)]
            spacing: "15dp"

            ConfigBoxField:
                label_text_config: app.current_lang["config"][0]
                input_text_config: str(config_input["size_hint_appbar"])
                function_code_config: "size_hint_y_appbar"
                input_filter: "float"

            ConfigBoxField:
                label_text_config: app.current_lang["config"][1]
                input_text_config: str(config_input["size_hint_navigation"])
                function_code_config: "size_hint_y_nav"
                input_filter: "float"

            ConfigBoxField:
                label_text_config: app.current_lang["config"][2]
                input_text_config: str(config_input["font_size_nav"])
                function_code_config: "font_size_nav"
                input_filter: "int"

            ConfigBoxField:
                label_text_config: app.current_lang["config"][3]
                input_text_config: str(config_input["tab_bar_h"][:-2])
                function_code_config: "mdtabs_height"
                input_filter: "int"

            ConfigBoxField:
                label_text_config: app.current_lang["config"][4]
                input_text_config: str(config_input["separator_padding_y"])
                function_code_config: "separator_padding_y"
                input_filter: "int"

            ConfigBoxField:
                label_text_config: app.current_lang["config"][7]
                input_text_config: str(config_input["center_y_note_item"])
                function_code_config: "center_y_note_item"
                input_filter: "float"

            ConfigBoxField:
                id: _unselect_note_cross_x
                label_text_config: app.current_lang["config"][8]
                input_text_config: str(config_input["unselect_note_icon_x_win"]) if platform == "win" else str(config_input["unselect_note_icon_x_android"])
                function_code_config: "unselect_note_x"
                input_filter: "float"

            ConfigBoxField:
                id: _unselect_note_cross_y
                label_text_config: app.current_lang["config"][9]
                input_text_config: str(config_input["unselect_note_icon_y_win"]) if platform == "win" else str(config_input["unselect_note_icon_y_android"])
                function_code_config: "unselect_note_y"
                input_filter: "float"

            ConfigBoxField:
                id: _search_textfield_y
                label_text_config: app.current_lang["config"][41]
                input_text_config: str(config_input["search_textfield_y_win"]) if platform == "win" else str(config_input["search_textfield_y_android"])
                function_code_config: "search_textfield_y"
                input_filter: "float"

            ConfigBoxField:
                id: _ingredient_button_font_size
                label_text_config: app.current_lang["config"][40]
                input_text_config: str(config_input["ingredient_button"]) 
                function_code_config: "ingredient_button_size"
                input_filter: "float"
