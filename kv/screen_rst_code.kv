ScreenRstCode:
    id: _screen_rst_code
    name: "screen rst code"
    fullscreen: True
    
    MDScrollView:
        id: _scroll_rst_code
        TextInput:
            size_hint_y: None 
            height: self.minimum_height
            padding: "10dp"
            text: app.current_lang["rst_help_text"]

    MDIconButton:
        icon: "arrow-left"
        md_bg_color: 1, 1, 1, .6
        pos_hint: {"center_x": .8, "top": .99}
        on_release: 
            app.manager.current = "screen rst help"
